<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Etat d'Inventaire</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .header, .footer {
            text-align: center;
            margin: 20px;
        }
        .header {
            font-size: 24px;
        }
        .footer {
            font-size: 12px;
            color: #777;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #000;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Etat d'Inventaire</h1>
        <p>ID: <%= inventaire.id %> | Article: <%= article.name %> | Date: <%= new Date(inventaire.date).toDateString() %></p>
    </div>
    <table>
        <thead>
            <tr>
                <th>Nom du Produit</th>
                <th>Quantité Physique</th>
                <th>Quantité logique</th>
                <th>Observation</th>
            </tr>
        </thead>
        <tbody>
            <% produitsDetails.forEach(function(produit) { %>
                <tr>
                    <td><%= produit.produitName %></td>
                    <td><%= produit.physicalquantity %></td>
                    <td><%= produit.logicalquantity %></td>
                    <td><%= produit.observation %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <div class="footer">
        <p>Generated on: <%= new Date().toDateString() %></p>
    </div>
</body>
</html>